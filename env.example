# Doctor GPT Environment Configuration
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL="postgresql://doctor_gpt:doctor_gpt_password@localhost:5432/doctor_gpt"
DIRECT_URL="postgresql://doctor_gpt:doctor_gpt_password@localhost:5432/doctor_gpt"

# AI Model API Keys
OPENAI_API_KEY="your_openai_api_key_here"
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Search & External APIs
TAVILY_API_KEY="your_tavily_api_key_here"

# Application Configuration
NODE_ENV="development"
APP_URL="http://localhost:3000"

# Vector Database Configuration (Qdrant)
QDRANT_URL="http://localhost:6333"
QDRANT_HTTP_PORT="6333"
QDRANT_GRPC_PORT="6334"
VECTOR_DIMENSIONS="1536"

# Cost Tracking
ENABLE_COST_TRACKING="true"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# File Upload Configuration
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="pdf,txt,docx,png,jpg,jpeg"

# LangGraph Configuration (optional)
LANGGRAPH_API_URL="http://localhost:2024"

# Docker Database Configuration (for local development)
DB_USER="doctor_gpt"
DB_PASSWORD="doctor_gpt_password"
DB_NAME="doctor_gpt"
DB_PORT="5432"

# Redis Configuration
REDIS_PORT="6379"

# pgAdmin Configuration (development only)
PGADMIN_EMAIL="admin@doctorgpt.local"
PGADMIN_PASSWORD="admin"
PGADMIN_PORT="5050"

# Minio Configuration (development only)
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin"
MINIO_PORT="9000"
MINIO_CONSOLE_PORT="9001"

# Security (change these in production)
JWT_SECRET="your_jwt_secret_here"
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (optional, for notifications)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# Monitoring & Analytics (optional)
SENTRY_DSN=""
GOOGLE_ANALYTICS_ID=""

# Feature Flags
ENABLE_FILE_UPLOAD="true"
ENABLE_WEB_SEARCH="true"
ENABLE_MULTI_MODEL="true"
ENABLE_COST_ALERTS="true"

# Development Settings
DEBUG_MODE="true"
LOG_LEVEL="info"
